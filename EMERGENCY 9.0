Definition simplified_cow_milking_machine:=
    forall t:T,
        forall d:T,
                (
                 forall s:T,
                    s in [t, t+90+d+20)
                  ->
                    power_in s
                )
            ->
                forall c:Cows,
                    (
                     exists w:T,
                        w in [t, t+90)
                      /\
                        cow_teats_in w (teatsFromCow c)
                    )        
                  ->
                      filled_message (t+90+d+10) c
.
    
